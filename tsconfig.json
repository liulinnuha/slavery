{
    "compilerOptions": {
        "skipLibCheck": true,
        "esModuleInterop": true,
        "module": "CommonJS",
        "resolveJsonModule": true,
        "removeComments": true,
        "moduleResolution": "Node",
        "target": "ESNext",
        "outDir": "dist",
        "baseUrl": "./",
        "experimentalDecorators": true,
        "paths": {
            "@utils/*": ["src/utils/*"],
            "@libs/*": ["src/libs/*"],
            "@constants": ["src/constants/index.ts"],
            "@handlers/*": ["src/handlers/*"],
            "@schema/*": ["src/schema/*"]
        }
    }
}
